/* pages/myOrder/myOrder.wxss */
.text-center{
  width: 100%;
  height:50%;
  display: flex;
  align-items: center;
  justify-content: center;
}


.weui-form-preview{
    margin-bottom: 25px;
}

@import "../../weui.wxss";

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.weui-form-preview__value{
  color: #868686;
  font-size: 13px;
}
.weui-form-preview__label{
  color: #868686;
  font-size: 13px;
}
.infact-pay{
  color: #4A4A4A;
  font-size: 15px;
}
.infact-charge{
  color: #FC222F;
  font-size: 14px;
}
.line{
  width: 96%;
  height: 1px;
  background-color: #F2F2F2;
  float: right;
}