@import "../../weui.wxss";
/* pages/video/video.wxss */

page {
  display: flex;
  flex-direction: column;
  /* height: 100%;   */
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 17px;
}

.navbar .item.active {
  color: #14C864;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #14C864;
}

.video {
  width: 750rpx;
  height: 375rpx;
}

.hr {
  margin: 0.5em 0px;
  width: 100%;
  height: 1px;
  background-color: #F2F2F2;
}

.mini-hr {
  margin: 0.5em 0px;
  width: 100%;
  height: 1px;
  background-color: #F2F2F2;
}

.wa-col-33 {
  color: #646B8E;
  font-size: 14px;
}

.status_loding {
  padding: 0 10px;
  margin: 0px 20px;
  position: absolute;
  color: white;
  height: 20px;
  font-weight: 200;
  font-size: 0.8em;
  line-height: 20px;
  background-color: darkturquoise;
}

.status_reload {
  padding: 0 10px;
  margin: 0px 20px;
  position: absolute;
  color: white;
  height: 20px;
  font-weight: 200;
  font-size: 0.8em;
  line-height: 20px;
  background-color: grey;
}
.status_live{
  padding: 0 10px;
  margin: 0px 20px;
  position: absolute;
  color: white;
  height: 20px;
  font-weight: 200;
  font-size: 0.8em;
  line-height: 20px;
  background-color: #14C864;
}
.type {
  border-radius: 10px;
  font-size: 0.8em;
  font-weight: 300;
  text-align: center;
  border: 1px solid greenyellow;
  color: greenyellow;
}

.titel {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.person {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 0.8em;
  font-weight: 300;
}

.font-center {
  line-height: 0.8em;
}

.head-img {
  width: 20px;
  height: 20px;
  border-radius: 20px;
}

.eye-img {
  width: 15px;
  height: 15px;
}

.more-img {
  width: 14px;
  height: 14px;
}

.submit-name {
  color: red;
}

.sub-des {
  margin-left: 1em;
  color: gainsboro;
}

.pay {
  position: fixed;
  bottom: 0;
  width:100%;
  height:64px; 
  background:rgba(250,250,255,1);
